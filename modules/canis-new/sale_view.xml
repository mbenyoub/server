<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <!-- Vista del formulario de Cotizacion -->
        <record model="ir.ui.view" id="view_order_form_inherit">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="priority" eval="22" />
            <field name="arch" type="xml">
                <field name="origin" position="replace" />
                <group name="sales_person" position="replace">
                    <group name="sales_person" groups="base.group_user">
                        <field name="user_id" attrs="{'readonly':[('state','not in',['draft','sent'])]}"/>
                        <field name="have_crm_lead" invisible="1" />
                        <field name="origin" attrs="{'invisible': [('have_crm_lead','=',True)]}" groups="base.group_no_one" />
                        <field name="crm_lead_id" string="Documento Origen" attrs="{'invisible': [('have_crm_lead','=',False)]}" groups="base.group_no_one"/>
                    </group>
                </group>
                <button string="Create Invoice" type="action" position="replace">
                    <button name="create_invoice" string="Crear Factura" type="object" class="oe_highlight" states="manual" groups="base.group_user"/>
                </button>
                <button name="action_button_confirm" position="before">
                    <button name="action_button_validate" states="sent" string="Confirmar venta" type="object" groups="base.group_user" class="oe_highlight"/>
                    <button name="action_button_validate" states="draft" string="Confirmar venta" type="object" groups="base.group_user"/>
                    <!--<button name="action_message" string="Mensaje" type="object" groups="base.group_user"/>-->
                    
                </button>
                <button name="action_button_confirm" states="sent" position="attributes" class="oe_highlight" >
                    <attribute name="groups">base.group_sale_manager</attribute>
                    <attribute name="states">pending_credit,pending_discount</attribute>
                    <attribute name="string" >Autorizar</attribute>
                </button>
                
                <button name="cancel" position="attributes" >
                    <attribute name="states">draft,sent,pending_credit,pending_discount</attribute>
                </button>
                <button name="action_button_confirm" states="draft" position="replace"/>
<!--
                <field name="state" position="attributes">
                    <attribute name="statusbar_visible">draft,cancel,pending_credit,pending_discount</attribute>
                </field>
-->
                <field name ="order_line" position="replace">
                    <field name="order_line" modifiers="{'readonly': [['state', 'not in', ['draft', 'sent']]]}">
                        <form string="Sales Order Lines" version="7.0">
                            <header groups="base.group_user">
                                <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done" statusbar_colors="{&quot;exception&quot;:&quot;red&quot;,&quot;cancel&quot;:&quot;red&quot;}"/>
                            </header>
                            <group>
                                <group>
                                    <field name="state" invisible="1"/>
                                    <field name="product_id" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom}" groups="base.group_user" on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, True, parent.date_order, False, parent.fiscal_position, False, context)"/>
                                    <label for="product_uom_qty"/>
                                    <div>
                                        <field context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom}" name="product_uom_qty" class="oe_inline" on_change="product_id_change(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, False, False, parent.date_order, False, parent.fiscal_position, True, context)"/>
                                        <field name="product_uom" groups="product.group_uom" class="oe_inline oe_no_button" on_change="product_uom_change(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, False, False, parent.date_order, context)"/>
                                    </div>
                                    <label for="product_uos_qty" groups="product.group_uos"/>
                                    <div groups="product.group_uos">
                                        <field name="product_uos_qty" class="oe_inline"/>
                                        <field name="product_uos" options="{&quot;no_open&quot;: True}" class="oe_inline"/>
                                    </div>
                                    <field name="price_unit"/>
                                    <label for="discount" groups="sale.group_discount_per_so_line"/>
                                    <div name="discount" groups="sale.group_discount_per_so_line">
                                        <field name="discount" class="oe_inline"/> 
                                    </div>
                                </group>
                                <group>
                                    <field name="tax_id" widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]"/>
                                    <field name="type"/>
                                    <field name="th_weight"/>
                                    <!-- we should put a config wizard for these two fields -->
                                    <field name="address_allotment_id"/>
                                </group>
                            </group>
                            <label for="name"/>
                            <field name="name"/>
                            <div groups="base.group_no_one">
                                <label for="invoice_lines"/>
                                <field name="invoice_lines"/>
                            </div>
                        </form>
                        <tree string="Sales Order Lines" editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="state" invisible="1"/>
                            <field name="state_order" invisible="1"/>
                            <field name="th_weight" invisible="1"/>
                            <field name="product_id" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom}" groups="base.group_user" on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, True, parent.date_order, False, parent.fiscal_position, False, context)"/>
                            <field name="name"/>
                            <field name="product_uom_qty" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom}" on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, False, parent.fiscal_position, True, context)"/>
                            <field name="virtual_available" readonly="1"/>
                            <field name="product_uom" on_change="product_uom_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, context)" groups="product.group_uom" options="{&quot;no_open&quot;: True}"/>
                            <field name="product_uos_qty" groups="product.group_uos" invisible="1"/>
                            <field name="product_uos" string="UoS" groups="product.group_uos" invisible="1"/>
                            <field name="price_unit_original" invisible="1"/>
                            <field name="price_unit" on_change="onchange_price_unit(price_unit_original,price_unit,context)"/>
                            <field name="discount" groups="sale.group_discount_per_so_line" invisible="1"/>
                            <field name="discount_com" invisible="1"/>
                            <field name="s_discount_com" groups="sale.group_discount_per_so_line" invisible="0" on_change="onchange_discount_change(s_discount_com,s_discount_vol,s_discount_mez,discount_com,discount_vol,discount_mez,context)"/>
                            <field name="discount_mez" invisible="1"/>
                            <field name="s_discount_mez" groups="sale.group_discount_per_so_line" invisible="0" on_change="onchange_discount_change(s_discount_com,s_discount_vol,s_discount_mez,discount_com,discount_vol,discount_mez,context)"/>
                            <field name="discount_vol" invisible="1"/>
                            <field name="s_discount_vol" groups="sale.group_discount_per_so_line" invisible="0" on_change="onchange_discount_change(s_discount_com,s_discount_vol,s_discount_mez,discount_com,discount_vol,discount_mez,context)"/>
                            <field name="discount_change" invisible="1" />
                            <field name="price_change" invisible="1" />
                            <field name="weight" invisible="1" />
                            <field name="tax_id" widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]"/>
                            <field name="price_subtotal" string="Precio lista"/>
                            <field name="weight_import" readonly="1"  sum="Total weight"/>
                            <field name="price_import" string="Importe"/>
                            <button name="action_refresh_line" string="" class="oe_edit_only" type="object" icon="gtk-refresh" attrs="{'invisible':[('price_change','=',False),'|',('discount_change','=',False),('state_order','not in',['draft','sent'])]}" modifiers="{'invisible':[('price_change','=',False),'|',('discount_change','=',False),('state_order','not in',['draft','sent'])]}"/>
                        </tree>
                    </field>
                </field>
                <xpath expr="//notebook/page[@string='Other Information']/group" position="after">
                    <group string="Mezclas"  colspan="4" col="4">
                        <field name="mix_ids" readonly="1" nolabel="1" colspan="3" col="3">
                            <tree string="Mezclas">
                                <field name="quantity"/>
                                <field name="weight"/>
                                <field name="categ_id"/>
                                <field name="percent"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
                <field name="amount_untaxed" position="attributes">
                    <attribute name="string">Base Precio lista</attribute>
                </field>
                <field name="amount_tax" position="before">
                    <field name="amount_discount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="discount_total" invisible="1" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_import" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </field>
                <field name="pricelist_id" position="after">
                    <field name="pricelist_change" invisible="1"/>
                </field>
                <field name="partner_shipping_id" position="after">
                    <field name="journal_id" domain="[('type','=','sale')]" widget="selection"/>
                </field>
                <field name="partner_invoice_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="client_order_ref" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="payment_term" position = "after">
                    <field name="credit"/>
                    <field name="credit_available"/>
                    <field name="weight_total" string="Peso vendido"/>
                </field>
                <h1 position="after">
                    <div class="oe_right oe_button_box" name="buttons"> 
                        <button name="action_view_invoice_partner" type="object" string="Facturas de Cliente"/>
                        <button name="button_print_payments" type="object" string="Imprimir pagos pendientes" help="Imprimir informe de pagos vencidos independiente de la línea de seguimiento"/>
                        <!--<button name="do_partner_mail" type="object" string="Enviar correo de vencimiento" help="Si no se especifica en el próximo nivel de seguimiento, se enviará con la plantilla de correo electrónico por defecto" attrs="{'invisible':[('payment_amount_due', '&lt;=', 0.0)]}" modifiers="{'invisible': [['payment_amount_due', '&lt;=', 0.0]]}"/>-->
                    </div>
                </h1>
                <field name="partner_id" position="attributes">
                    <attribute name="domain">['|',('branch_id.user_ids','in',(uid)),('branch_id','=',False)]</attribute>
                    <attribute name="filter_domain">['|','|','|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self),('client','ilike',self),('email','ilike',self)]</attribute>
                </field>
                <field name="partner_invoice_id" position="attributes">
                    <attribute name="domain">['|',('branch_id.user_ids','in',(uid)),('branch_id','=',False)]</attribute>
                    <attribute name="filter_domain">['|','|','|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self),('client','ilike',self),('email','ilike',self)]</attribute>
                </field>
                <field name="partner_shipping_id" position="attributes">
                    <attribute name="domain">['|',('branch_id.user_ids','in',(uid)),('branch_id','=',False),('type','=','delivery')]</attribute>
                    <attribute name="filter_domain">['|','|','|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self),('client','ilike',self),('email','ilike',self)]</attribute>
                    <attribute name="context">{'default_type':'delivery', 'parent_id': partner_id}</attribute>
                </field>
            </field>
        </record>
        
        <!-- Vista del lista de Cotizacion -->
        <record model="ir.ui.view" id="view_quotation_tree_inherit">
            <field name="name">sale.order.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree" />
            <field name="arch" type="xml">
                <!--<field name="user_id" position="attributes">-->
                <!--    <attribute name="domain">['user_id','=',(uid)]</attribute>-->
                <!--</field>-->
                <tree string="Quotation" position="attributes">
                    <attribute name= "colors">blue:state=='pending_credit'</attribute>
                    <attribute name= "colors">blue:state=='pending_discount'</attribute>
                </tree>
                  
            </field>
        </record>
        
         <!-- Vista del lista de Pedido de Venta -->
        <!--<record model="ir.ui.view" id="view_order_tree_inherit">-->
        <!--    <field name="name">sale.order.tree.inherit</field>-->
        <!--    <field name="model">sale.order</field>-->
        <!--    <field name="inherit_id" ref="sale.view_order_tree" />-->
        <!--    <field name="arch" type="xml">-->
