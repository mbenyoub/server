            <field name="name" >Visitas</field>
        </record>-->
        
<!--
         Vista para Vendeodres sobre pedido de venta
-->
        <!-- Vista formulario -->
        <record id="view_basic_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form string="Sales Order" version="7.0">
                    <header>
                        <button name="create_order" attrs="{'invisible': [('state','!=','draft')]}" string="Guardar" class="oe_highlight" type="object" groups="base.group_user"/>
                        <button name="invoice_recreate" states="invoice_except" string="Recreate Invoice" groups="base.group_user"/>
                        <button name="invoice_corrected" states="invoice_except" string="Ignore Exception" groups="base.group_user"/>
                        <button name="action_quotation_send" string="Send by Email" type="object" attrs="{'invisible': ['|',('state','!=','draft'),('created', '=', False)]}" class="oe_highlight" groups="base.group_user"/>
                        <button name="action_quotation_send" string="Send by Email" type="object" attrs="{'invisible': ['|',('state','!=','draft'),('created', '=', True)]}" groups="base.group_user"/>
                        <button name="print_quotation" string="Print" type="object" attrs="{'invisible': ['|',('state','!=','draft'),('created', '=', False)]}" class="oe_highlight" groups="base.group_user"/>
                        <button name="print_quotation" string="Print" type="object" attrs="{'invisible': ['|',('state','!=','draft'),('created', '=', True)]}" groups="base.group_user"/>
                        <button name="action_button_validate" states="sent" string="Confirmar venta" type="object" groups="base.group_user" class="oe_highlight"/>
                        <button name="action_button_validate" states="draft" string="Confirmar venta" type="object" groups="base.group_user"/>
                        <button name="action_button_confirm" states="pending_discount,pending_credit" string="Autorizar" class="oe_highlight" type="object" groups="base.group_sale_manager"/>
                        <!--<button name="action_button_confirm" string="Autorizar" class="oe_highlight" type="object" groups="base.group_user base.user_root groups="sale.group_analytic_accounting base.group_erp_manager"
                            attrs="{'invisible': ['|',('state','not in',('pending_discount','pending_credit')),('uid', '!=', '1')]}"/>-->
                        <button name="action_view_invoice" string="View Invoice" type="object" class="oe_highlight"
                            attrs="{'invisible': [('invoice_exists', '=', False)]}" groups="base.group_user"/>
                        <!--<button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"-->
                        <!--    type="action" states="manual" class="oe_highlight" groups="base.group_user"/>-->
                        <button name="create_invoice" string="Crear Factura" type="object" class="oe_highlight" states="manual" groups="base.group_user"/>
                        <button name="copy_quotation" states="cancel" string="New Copy of Quotation" type="object"/>
                        <button name="action_requisition_credit_new" string="Solicitar credito" type="object" />
                        <button name="cancel" states="draft,sent,pending_credit,pending_discount" string="Cancel Quotation" groups="base.group_user"/>
                        <button name="action_cancel" states="manual,progress" string="Cancel Order" type="object" groups="base.group_user"/>
                        <button name="invoice_cancel" states="invoice_except" string="Cancel Order" groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,invoiced,done" statusbar_colors='{"invoice_except":"red","waiting_date":"blue"}'/>
                    
                    </header>
<!--
                <sheet>
-->
                    <h1>
                        <label string="Quotation " attrs="{'invisible': [('state','not in',('draft','sent'))]}"/>
                        <label string="Sales Order " attrs="{'invisible': [('state','in',('draft','sent'))]}"/>
                        <field name="name" class="oe_inline" readonly="1"/>
                        <div class="oe_right oe_button_box" name="buttons"> 
                            <button name="action_view_invoice_partner" type="object" string="Facturas de Cliente"/>
                            <button name="button_print_payments" type="object" string="Imprimir pagos pendientes" help="Imprimir informe de pagos vencidos independiente de la línea de seguimiento"/>
                            <!--<button name="do_partner_mail" type="object" string="Enviar correo de vencimiento" help="Si no se especifica en el próximo nivel de seguimiento, se enviará con la plantilla de correo electrónico por defecto" attrs="{'invisible':[('payment_amount_due', '&lt;=', 0.0)]}" modifiers="{'invisible': [['payment_amount_due', '&lt;=', 0.0]]}"/>-->
                        </div>
                    </h1>
                    <h2>
                        <group>
                            <group>
                                <field name="partner_id" context="{'search_default_customer':1, 'show_address': 1}" options='{"always_reload": True}'
                                        on_change="onchange_partner_id(partner_id, context)"
                                        domain="['|',('branch_id.user_ids','in',(uid)),('branch_id','=',False)]"
                                        filter_domain="['|','|','|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self),('client','ilike',self),('email','ilike',self)]"/>
                                <field name="partner_invoice_id" invisible="1" groups="sale.group_delivery_invoice_address" context="{'default_type':'invoice'}"
                                        domain="['|',('branch_id.user_ids','in',(uid)),('branch_id','=',False)]"
                                        filter_domain="['|','|','|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self),('client','ilike',self),('email','ilike',self)]"/>
                                <field name="partner_shipping_id" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery'}"
                                        on_change="onchange_partner_shipping_id(partner_id,partner_shipping_id,context)"
                                        domain="['|',('branch_id.user_ids','in',(uid)),('branch_id','=',False),('type','=','delivery')]"
                                        filter_domain="['|','|','|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self),('client','ilike',self),('email','ilike',self)]"/>
                                <field name="project_id" context="{'partner_id':partner_invoice_id, 'default_pricelist_id':pricelist_id, 'default_name':name, 'default_type': 'contract'}" groups="sale.group_analytic_accounting" domain="[('type','in',['view','normal','contract'])]"/>
                                <field name="journal_id" widget="selection" domain="[('type','=','sale')]"/>
                            </group>
                            <group>
                                <field name="date_order" invisible="1"/>
                                <field name="datetime_order" readonly="1" on_change="onchange_datetime_order(datetime_order,context)"  attrs="{'invisible': [('state','in',['draft','sent'])], 'readonly': [('state','not in',['draft','sent'])]}"/>
                                <field name="due_date" attrs="{'readonly': [('state','in',['cancel','progress','manual','invoice_except'])]}"/>
                                <field name="shop_id" groups="base.group_no_one" on_change="onchange_shop_id(shop_id, context)" widget="selection"/>
