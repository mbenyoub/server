<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_delivery_route_form">
            <field name="name">delivery.route.form.inherit</field>
            <field name="model">delivery.route</field>
            <field name="inherit_id" ref="delivery_routes.view_delivery_route_form"/>
            <field name="priority" eval="18"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='log_line_ids']" position="after">
                    <separator string="Registro de pagos"/>
                    <field name="paid_log_ids" readonly="1">
                        <tree string="Registro de pagos" create="0" edit="0" delete="0">
                            <field name="invoice_id"/>
                            <field name="journal_id"/>
                            <field name="amount" sum="Total_amount"/>
                            <field name="date"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_delivery_route_line_form">
            <field name="name">delivery.route.line.form</field>
            <field name="model">delivery.route.line</field>
            <field name="inherit_id" ref="delivery_routes.view_delivery_route_line_form"/>
            <field name="priority" eval="18"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='address_id']" position="after">
                    <field name="paid_all_sign" invisible="1"/>
                    <field name="paid_button_show" invisible="1"/>
                    <field name="pending_credit" invisible="1"/>
                </xpath>
                <xpath expr="//button[@name='action_delivered']" position="attributes">
                    <attribute name="attrs">{'invisible':['|', ('paid_all_sign','=',True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_delivered']" position="after">
                    <button name="action_paid" type="object" string="Realizar pago"
                        class="oe_highlight"
                        attrs="{'invisible':['|', ('state','not in',['arrived', 'delivered', 'done', 'return']),
                        ('paid_button_show', '=', False)]}"/>
                    <button name="action_requisition_credit_new" type="object" string="Solicitud de credito"
                        class="oe_highlight"
                        attrs="{'invisible':['|', ('state','not in',['arrived', 'delivered', 'done', 'return']), ('paid_all_sign','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
