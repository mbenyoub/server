        <field name="search_view_id" ref="view_planning_project_crm_case_phonecalls_filter"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_planning_project_crm_tag_tree_phone0">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="planning_project_crm_case_phone_tree_view"/>
        <field name="act_window_id" ref="planning_project_crm_case_categ_phone0"/>
