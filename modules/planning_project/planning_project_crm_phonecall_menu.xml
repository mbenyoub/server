    <menuitem name="Llamadas telefónicas" id="menu_planning_project_crm_case_phone"
        parent="base.menu_main_pm" sequence="3" />

    <record model="ir.actions.act_window" id="planning_project_crm_case_categ_phone_incoming0">
        <field name="name">Logged Calls</field>
        <field name="res_model">crm.phonecall</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,calendar</field>
        <field name="view_id" ref="planning_project_crm_case_inbound_phone_tree_view"/>
        <field name="domain">[('is_project', '=', True)]</field>
        <field name="context">{'default_is_project': True, 'default_state': 'done', 'search_default_state': 'done'}</field>
        <field name="search_view_id" ref="view_planning_project_crm_case_phonecalls_filter"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Haga click para registrar una llamada relacionada con el proyecto. 
          </p><p>
            OpenERP le permite registrar las llamadas entrantes en la marcha para realizar el seguimiento del
            historial de comunicación con un cliente o para informar a otro miembro del equipo.
          </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="action_planning_project_crm_tag_tree_phone_incoming0">
