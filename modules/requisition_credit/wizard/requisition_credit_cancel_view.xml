<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="view_requisition_credit_cancel_wizard" model="ir.ui.view">
            <field name="name">requisition.credit.cancel.wizard.form</field>
            <field name="model">requisition.credit.cancel.wizard</field>
            <field name="arch" type="xml">
                <form string="Cancelar Factura" version="7.0">
                    <group>
                        <field name="date" readonly="1"/>
                        <field name="requisition_id" invisible="1"/>
                        <field name="type"/>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button string="Continuar" name="action_requisition_cancel" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
